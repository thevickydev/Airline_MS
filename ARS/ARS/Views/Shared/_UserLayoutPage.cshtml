<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap 5 CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Custom Styles -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #F0F4F8;
            display: flex;
        }

        /* Sidebar Styling */
        .sidebar {
            width: 250px;
            background: #1E2A38;
            color: white;
            height: 100vh;
            padding: 20px;
            position: fixed;
            left: 0;
            top: 0;
        }

            .sidebar h2 {
                color: #00BCD4;
                text-align: center;
                margin-bottom: 20px;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    padding: 10px;
                    cursor: pointer;
                    font-size: 16px;
                    transition: background 0.3s ease;
                }

                    .sidebar ul li:hover {
                        background: #2C3E50;
                    }

        .submenu {
            display: none;
            background: #2C3E50;
            padding-left: 15px;
        }

            .submenu li {
                padding: 8px;
                font-size: 14px;
            }

        .sidebar ul li.active .submenu {
            display: block;
        }

        .arrow {
            float: right;
            transition: transform 0.3s ease;
        }

        .sidebar ul li.active .arrow {
            transform: rotate(90deg);
        }

        /* Main Content Styling */
        .main-content {
            margin-left: 270px;
            padding: 20px;
            width: calc(100% - 270px);
        }

        .content-section {
            display: none;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .submenu li a {
            color: white;
            text-decoration: none; /* Removes underline */
        }

            .submenu li a:hover {
                color: #00BCD4; /* Light cyan on hover */
            }
        .active-section {
            display: block;
        }

        /* Navbar Styling */
        .navbar {
            background: #1E2A38;
            color: white;
            margin-left: 250px;
            width: calc(100% - 250px);
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

            .nav-link:hover {
                color: #00BCD4 !important;
            }

        /* Footer */
        .footer {
            background: #1E2A38;
            color: white;
            text-align: center;
            padding: 20px;
            margin-top: 20px;
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".sidebar ul li").forEach(function (item) {
                item.addEventListener("click", function (event) {
                    let submenu = this.querySelector(".submenu");
                    let arrow = this.querySelector(".arrow");

                    if (submenu) {
                        event.stopPropagation(); // Prevents closing when clicking submenu items
                        submenu.style.display = submenu.style.display === "flex" ? "none" : "flex";
                        arrow.style.transform = submenu.style.display === "flex" ? "rotate(90deg)" : "rotate(0deg)";
                    }
                });
            });
        });
    </script>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>ARS</h2>
        <ul>
            <li>@Html.ActionLink("Booking", "UserDetails", "User")</li>
            <li>
                Flights <span class="arrow">▶</span>
                <ul class="submenu">
                    <li>@Html.ActionLink("add", "Create", "AeroPlane")</li>
                    <li>@Html.ActionLink("View Details", "Index", "AeroPlane")</li>
                </ul>
            </li>
            <li>
                Flight <span class="arrow">▶</span>
                <ul class="submenu">
                    <li>@Html.ActionLink("Available", "Create", "TicketReserve_tbl")</li>
                    <li>@Html.ActionLink("Flight Details", "Index", "TicketReserve_tbl")</li>
                </ul>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="#">ARS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link tab-link active" href="#" data-section="home">Home</a></li>
                        <li class="nav-item"><a class="nav-link tab-link" href="#" data-section="flights">Flights</a></li>
                        <li class="nav-item"><a class="nav-link tab-link" href="#" data-section="contact">Contact Us</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        @RenderBody()
        <div class="container mt-4">
            <div id="home" class="content-section active-section">
                <h2>Welcome to the Airline Reservation System</h2>
                <p>Book flights with ease.</p>
            </div>
            <div id="flights" class="content-section">
                <h2>Search Flights</h2>
                <p>Find and book your flights easily.</p>
            </div>
            <div id="contact" class="content-section">
                <h2>Contact Us</h2>
                <p>Email: support@ars.com</p>
                <p>Phone: +1 234 567 890</p>
            </div>
        </div>
       
        <!-- Footer -->
        <div class="footer">
            <p>Airline Reservation System provides an easy and efficient way to book flights online.</p>
        </div>
    </div>

    <!-- Bootstrap & jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- JavaScript for Tabs -->
    <script>
        $(document).ready(function () {
            $(".tab-link").click(function () {
                $(".tab-link").removeClass("active");
                $(this).addClass("active");
                $(".content-section").removeClass("active-section");
                let sectionId = $(this).data("section");
                $("#" + sectionId).addClass("active-section");
            });
        });
    </script>
</body>
</html>
