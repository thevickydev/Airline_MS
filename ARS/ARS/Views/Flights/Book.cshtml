@model ARS.Models.FlightBooking

<h2>Book Flight</h2>

<form asp-action="Book" method="post">
    <input type="hidden" asp-for="Planeid" />
    <input type="hidden" asp-for="SeatType" />

    <label>Name:</label>
    <input type="text" asp-for="CusName" required />

    <label>Email:</label>
    <input type="email" asp-for="CusEmail" required />

    <label>Phone:</label>
    <input type="text" asp-for="CusPhone" required />

    <label>CNIC:</label>
    <input type="text" asp-for="CusCnic" required />

    <label>Seat Number:</label>
    <input type="text" asp-for="SeatType" required />



    <button type="submit">Confirm Booking</button>
</form>

